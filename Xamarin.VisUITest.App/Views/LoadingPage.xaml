<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin.VisUITest.App.Views.LoadingPage">

    <AbsoluteLayout>
        <Image AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
        	     AbsoluteLayout.LayoutFlags="All"
        	     Source="Default.png"
        	     Aspect="AspectFit"></Image>
        <Label AbsoluteLayout.LayoutBounds="0, 0.4, 1, .05"
        	     AbsoluteLayout.LayoutFlags="All"
        	     Text="{Binding ScreenSizeWithoutStatusbar}"
        	     HorizontalTextAlignment="Center"
        	     VerticalTextAlignment="Center"/>
        <Label AbsoluteLayout.LayoutBounds="0, 0.6, 1, .05"
        	     AbsoluteLayout.LayoutFlags="All"
        	     Text="{Binding ScreenSizeWithStatusbar}"
        	     HorizontalTextAlignment="Center"
        	     VerticalTextAlignment="Center"/>
        <Label AbsoluteLayout.LayoutBounds="0, 1, 1, .05"
        	     AbsoluteLayout.LayoutFlags="All"
        	     Text="Just Another Label"
        	     HorizontalTextAlignment="Center"
        	     VerticalTextAlignment="Center"/>
    </AbsoluteLayout>

</ContentPage>